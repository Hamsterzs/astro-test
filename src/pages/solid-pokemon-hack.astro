---
import PokemonList from "../components/solid/PokemonListHack";
import PokemonOnlyList from "../components/solid/PokemonOnlyList";
import POKEMON from "../data/pokemon";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <div class="flex h-screen w-screen flex-col items-center justify-center">
      <h1 class="my-3 text-4xl text-red-500">Solid pokemon list</h1>
      <PokemonList client:load />
      <PokemonOnlyList pokemons={POKEMON} />
      <div class="absolute top-4 left-4 my-4">
        <a href="/" class="text-blue-500">Go back</a>
      </div>
    </div>
  </body>
</html>

<style is:global>
  li {
    margin: 1.25rem 0rem;
    border: solid lightgray 2px;
    padding: 0.5rem 1rem;
    font-size: 1.5rem /* 24px */;
    line-height: 2rem /* 32px */;
  }
</style>
